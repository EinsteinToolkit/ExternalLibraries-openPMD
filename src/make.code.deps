# Main make.code.deps file for thorn openPMD

export OPENPMD_ENABLE_FORTRAN
export OPENPMD_INSTALL_DIR
export HAVE_CAPABILITY_HDF5 HAVE_CAPABILITY_ADIOS HAVE_CAPABILITY_MPI
export CMAKE_DIR HDF5_DIR ADIOS_DIR MPI_DIR

$(CCTK_TARGET) $(OBJS) $(SRCS:%=%.d): $(SCRATCH_BUILD)/done/$(THORN)

ifneq ($(OPENPMD_BUILD),)
$(SCRATCH_BUILD)/done/$(THORN): $(SRCDIR)/build.sh
	+$(SRCDIR)/build.sh
endif
